<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <!-- Note: requires propertyConfigurer
         We keep it separate so that it can be used outside of Abdera APP service
         (i.e. the DBSeeder uses it )
    -->

    <bean id="org.atomserver-contentStorage"
          class="org.atomserver.core.filestore.FileBasedContentStorage"
          lazy-init="true"
          depends-on="org.atomserver-propertyConfigurer">
        <constructor-arg type="java.io.File" value="${atomserver.data.dir}"/>
        <property name="sweepToTrash" value="true"/>
        <property name="gzipEnabled" value="true"/>
        <property name="partitionPathGenerators">
            <list>
                <bean class="org.atomserver.utils.ShardedPathGenerator"/>
                <bean class="org.atomserver.utils.PrefixPartitionPathGenerator"/>
            </list>
        </property>
    </bean>

    <bean id="org.atomserver-entryCategoriesContentStorage"
          class="org.atomserver.core.dbstore.EntryCategoriesContentStorage"
          depends-on="org.atomserver-propertyConfigurer"
          lazy-init="true">
        <property name="entryCategoriesDAO" ref="org.atomserver-entryCategoriesDAO"/>
        <property name="serviceContext" ref="org.apache.abdera.protocol.server.ServiceContext"/>
        <property name="realContentStorage" ref="org.atomserver-contentStorage"/>
    </bean>

    <bean id="org.atomserver-entryCategoriesHandler"
          class="org.atomserver.core.dbstore.EntryCategoriesHandler"
          depends-on="org.atomserver-propertyConfigurer"
          lazy-init="true">
        <property name="entryCategoriesDAO" ref="org.atomserver-entryCategoriesDAO"/>
        <property name="serviceContext" ref="org.apache.abdera.protocol.server.ServiceContext"/>
    </bean>

</beans>
