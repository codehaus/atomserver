<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <!-- rather than rely on the app knowing all SpringBeans it needs
       let's just wire them all in here --> 

  <import resource="classpath:/org/atomserver/spring/propertyConfigurerBeans.xml" />
  <import resource="classpath:/org/atomserver/spring/logBeans.xml" />
  <import resource="classpath:/org/atomserver/spring/storageBeans.xml" />
  <import resource="classpath:/org/atomserver/spring/abderaBeans.xml" />
  <import resource="classpath:/org/atomserver/spring/databaseBeans.xml" />
  <import resource="classpath:/org/atomserver/spring/jmxBeans.xml" /> 

</beans>